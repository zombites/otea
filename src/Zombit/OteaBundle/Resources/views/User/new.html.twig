{% extends 'base.html.twig' %}

{% block title %}Usuarias/os{% endblock %}

{% block namepage %}Creación de usuaria/o{% endblock %}

{% block body %}
	{{ form_start(form, { 'attr' : { 'class' : 'form-horizontal' } }) }}


	<div class="form-group">
	    {{ form_label(form.name, null, { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
	    <div class="col-sm-10">
			{{ form_widget(form.name, { 'attr': {'class': 'form-control', 'placeholder': 'Nombre completo'} }) }}     
	    </div>
	    {{ form_errors(form.name) }}   
	</div>
	
	<div class="form-group">
	    {{ form_label(form.username, null, { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
	    <div class="col-sm-10">
			{{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'Nombre de usuaria/o'} }) }}     
	    </div>
	    {{ form_errors(form.username) }}   
	</div>
	
	<div class="form-group">
	    {{ form_label(form.email, null, { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
	    <div class="col-sm-10">
			{{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'Correo electrónico'} }) }}     
	    </div>
	    {{ form_errors(form.email) }}   
	</div>
	
	{% for passwordField in form.plainPassword %}
	
	<div class="form-group">
	    {{ form_label(passwordField, null, { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
	    <div class="col-sm-10">
			{{ form_widget(passwordField, { 'attr': {'class': 'form-control', 'placeholder': 'Contraseña'} }) }}     
	    </div>
	    {{ form_errors(passwordField) }}   
	</div>
	
	{% endfor %}
	
	<div class="form-group">
	    <div class="col-sm-offset-2 col-sm-10">
			{{ form_widget(form.gender, { 'attr': {'class': 'form-control'} }) }}     
	    </div>
	    {{ form_errors(form.gender) }}   
	</div>
	
	<div class="col-sm-12 pull-right">
		<hr />
		<div class="pull-right">
			{{ form_widget(form.submit, { 'attr': {'class': 'btn btn-success'} }) }}
			<a href="{{ path('users') }}"><button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button></a>
		</div>
	</div>

	{{ form_errors(form) }}
	{{ form_rest(form) }}
	{{ form_end(form) }}
{% endblock %}